{
  "name": "peer-ui",
  "version": "2.0.3",
  "description": "Styles and PeerUI React component library for peerio-desktop",
  "main": "dist/peer-ui.js",
  "types": "dist/peer-ui.d.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "watch": "run-p watch:*",
    "watch:webpack": "webpack -d --watch",
    "watch:style": "npm run build:style -- -w",
    "web-build": "run-p web-build:*",
    "web-build:webpack": "webpack -p",
    "web-build:style": "node-sass ./src/style.scss ./dist/style.css",
    "test": "run-s -l test:*",
    "test:ts": "tsc --noEmit --pretty",
    "test:jest": "jest --colors",
    "test:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "test:prettier": "prettier 'src/**/*.{ts,tsx,scss}' -l",
    "prettier": "prettier 'src/**/*.{ts,tsx,scss}' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeerioTechnologies/ui-library.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/ui-library/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/ui-library#readme",
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.5.0",
    "jest-enzyme": "^6.0.4",
    "mobx": "3.5.1",
    "mobx-react": "4.4.2",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^2.1.5"
  },
  "peerDependencies": {
    "mobx": "*",
    "mobx-react": "*",
    "react": "*",
    "react-dom": "*"
  },
  "jest": {
    "testEnvironment": "enzyme",
    "setupTestFrameworkScriptFile": "./src/setupEnzyme.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
